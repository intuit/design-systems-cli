{
  "extends": ["group:monorepos", "packages:postcss"],
  "masterIssue": true,
  "automerge": false,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "separateMajorMinor": false,
  "patch": {
    "labels": ["dependency-update"]
  },
  "minor": {
    "labels": ["dependency-update"]
  },
  "major": {
    "labels": ["dependency-update"]
  },
  "digest": {
    "labels": ["dependency-update"]
  },
  "packageRules": [
    {
      "packagePatterns": ["@storybook"],
      "groupName": "storybook",
      "rangeStrategy": "bump"
    },
    {
      "packageNames": ["autoprefixer", "icss-utils"],
      "packagePatterns": ["^postcss", "@types/postcss"],
      "groupName": "postcss",
      "rangeStrategy": "replace"
    },
    {
      "packagePatterns": ["@proof-ui"],
      "groupName": "proof"
    },
    {
      "packagePatterns": ["@reach"],
      "groupName": "reach"
    },
    {
      "packagePatterns": ["auto", "@auto-it"],
      "groupName": "auto",
      "excludePackageNames": ["autoprefixer"]
    },
    {
      "extends": "packages:linters",
      "packagePatterns": ["^eslint"],
      "groupName": "linters"
    },
    {
      "packagePatterns": ["stylelint"],
      "groupName": "stylelint"
    }
  ]
}
